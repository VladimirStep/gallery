.page-header
  %h1.text-center
    = @user.email
    = t('.comments')
%table.table
  %thead
    %th= t('.date_time')
    %th= t('.picture')
    %th= t('.comment')
  %tbody
    - @comments.each do |comment|
      %tr
        %td= comment.created_at
        %td= comment.picture_id
        %td= comment.body
%nav{'aria-label' => 'Page navigation', class: 'text-center'}
  = paginate @comments