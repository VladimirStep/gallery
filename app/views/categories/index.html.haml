.page-header
  %h1.text-center= t('.categories')
.row
  - @categories.each do |category|
    %div.col-sm-6.col-md-4.col-lg-3
      %a.thumbnail.text-center{href: "#{category_url(category.category_name)}"}
        .image-category-holder.center-block
          = image_tag category.pictures.first.image.url, class: 'cover' if category.pictures.any?
        %h4= category.category_name.upcase
