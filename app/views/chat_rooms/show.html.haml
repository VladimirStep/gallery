.page-header
  %h1.text-center= @chat_room.title

.row
  .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
    #messages{'data-chat-room-id' => "#{@chat_room.id}"}
      = render @chat_room.messages

    = form_for @message, url: '#' do |f|
      .form-group
        = f.label :body, t('.body')
        = f.text_area :body, class: 'form-control'
        %small.text-muted= t('.notes')
      = f.submit t('.post'), class: 'btn btn-primary btn-lg'
