.page-header
  %h1.text-center= t('.add_new_chat')
.row
  .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
    = form_for @chat_room do |f|
      .form-group
        = f.label :title, t('.label_title')
        = f.text_field :title, autofocus: true, class: 'form-control'
        %br
        %br
        = f.submit t('.add'), class: 'btn btn-primary'
