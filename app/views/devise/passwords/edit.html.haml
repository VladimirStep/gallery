%h2.text-center= t('.change_your_password')
.row
  .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group
        = f.label :password, t('.new_password')
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
          %br/
        = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
        %br
        = f.label :password_confirmation, t('.confirm_new_password')
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        %br
        = f.submit t('.change_my_password'), class: 'btn btn-primary'

    = render "devise/shared/links"
