= form_for :like, url: like_path(@like.ids), method: 'delete' do |f|
  = f.hidden_field :category_name, value: @category.category_name
  = f.hidden_field :picture_id, value: @picture.id
  %input{type: 'image', src: "#{asset_path 'like.png'}", alt: 'Submit', width: '48', height: '48'}
  %span
    = @picture.likes.count
    = t('.like', count: @picture.likes.count)
