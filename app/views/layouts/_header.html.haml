%header
  .row
    %nav.navbar.navbar-inverse
      .navbar-header
        %button{type: 'button', class: 'navbar-toggle collapsed', data: {toggle: 'collapse', target: '#bs-example-navbar-collapse-1'}, 'aria-expanded' => 'false'}
          %span.sr-only Main menu
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'Gallery', root_path, class: 'navbar-brand'
      %div{class: 'collapse navbar-collapse', id: 'bs-example-navbar-collapse-1'}
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to 'Categories', categories_path
          %li
            = link_to 'Pictures', root_path
          %li
            %a{href: '#'}
              Comments
          %li
            %a{href: '#'}
              Events
          - if user_signed_in?
            %li
              %p.navbar-text
                = current_user.email
            %li.dropdown
              %a{href: '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown', role: 'button', 'aria-haspopup' => 'true', 'aria-expanded' => 'false'}
                Account
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Profile', edit_user_registration_path
                %li
                  = link_to 'Sign out', destroy_user_session_path, method: 'delete'
          - else
            %li
              = link_to 'Sign in', new_user_session_path
            %li
              = link_to 'Sign up', new_user_registration_path
