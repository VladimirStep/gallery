%header  
  %nav.navbar.navbar-inverse
    .container
      .navbar-header
        %button{type: 'button', class: 'navbar-toggle collapsed', data: {toggle: 'collapse', target: '#bs-example-navbar-collapse-1'}, 'aria-expanded' => 'false'}
          %span.sr-only Main menu
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to t('.gallery'), root_path, class: 'navbar-brand'
      %div{class: 'collapse navbar-collapse', id: 'bs-example-navbar-collapse-1'}
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to t('.categories'), categories_path
          %li
            = link_to t('.pictures'), root_path
          %li
            = link_to t('.comments'), comments_path
          %li
            = link_to t('.events'), events_path
          - if user_signed_in?
            %li
              = link_to t('.chat_rooms'), chat_rooms_path
            %li
              %p.navbar-text
                = current_user.email
            %li.dropdown
              %a{href: '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown', role: 'button', 'aria-haspopup' => 'true', 'aria-expanded' => 'false'}
                = t('.account')
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to t('.profile'), edit_user_registration_path
                %li
                  = link_to t('.sign_out'), destroy_user_session_path, method: 'delete'
          - else
            %li
              = link_to t('.sign_in'), new_user_session_path
            %li
              = link_to t('.sign_up'), new_user_registration_path
          %li
            %p.navbar-text
              = link_to t('.en'), "#{url_for(locale: :en)}", class: 'navbar-link'
              |
              = link_to t('.ru'), "#{url_for(locale: :ru)}", class: 'navbar-link'
